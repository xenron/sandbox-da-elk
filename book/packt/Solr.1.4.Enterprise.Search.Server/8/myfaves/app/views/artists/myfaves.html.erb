<h1>My Favorite Artists</h1>


<table>
  <tr>
    <th>Name</th>
    <th>Group type</th>
    <th>Release date</th>
  </tr>

<% @myfaves.each do |artist| %>
  <tr>
    <td><%=h artist.name %></td>
    <td><%=h artist.group_type %></td>
    <td><%=h artist.release_date %></td>
    <td><%= link_to 'Show', artist %></td>
  </tr>
<% end %>
</table>

<br />
<% form_for :artist, :url => {:action => :add_myfaves } do |f| %> 
<p>
  <%= f.label :name %><br />
  <%= f.text_field :name %>
</p>
  <p>
    <%= f.submit 'Add' %>
  </p>
<% end %>

<%= link_to 'All Artists', artists_path %>